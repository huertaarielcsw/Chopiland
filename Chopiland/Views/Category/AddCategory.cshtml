@model CategoryViewModel
@using Chopiland.Models
@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
        <form asp-action="AddCategory" role="form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="flex-w flex-r-m p-b-10">
                    <div class="size-204 respon6-next">
                        <label asp-for="Category" class="control-label mtext-105 cl2 js-name-detail p-b-14"></label>
                        <div class="bor8 bg0">
                            <input asp-for="Category" class="form-control" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="flex-w flex-r-m p-b-10">
                    <div class="size-204 respon6-next">
                        <label asp-for="MajorCategory" class="control-label mtext-105 cl2 js-name-detail p-b-14"></label>
                        <div class="rs1-select2 bor8 bg0">
                            <select asp-for="CategoryId" class="form-control js-select2" asp-items="@Model.CategoryNameSL">
                                <option value="">-- Choose a category --</option>
                            </select>
                            <div class="dropDownSelect2"></div>
                            <span asp-validation-for="MajorCategory" class="text-danger" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="flex-w flex-r-m">
                   <input type="submit" value="Create" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04" />
                   <a asp-area="" asp-controller="Category" asp-action="Index" class="flex-c-m btn btn-danger stext-101 cl0 size-101  bor1 hov-btn1 p-lr-15 trans-04">Back to List</a>
                </div>
            </div>         
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}