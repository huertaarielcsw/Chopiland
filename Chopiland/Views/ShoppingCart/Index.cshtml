@model ShoppingCartViewModel
@using Chopiland.Models
@{
    ViewData["Title"] = "ShoppingCart";
}

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-controller="Home" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Shoping Cart
        </span>
    </div>
</div>


<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85" asp-action="Checkout" role="form" method="post">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Product</th>
                                <th class="column-2"></th>
                                <th class="column-3">Price</th>
                                <th class="column-4">Quantity</th>
                                <th class="column-5">Total</th>
                            </tr>

                             @foreach (var item in Model.Items)
                             {
                                <tr class="table_row">
                                    <td class="column-1">
                                        <a asp-route-id="@item.Id" asp-action="Delete" asp-controller="ShoppingCart">
                                            <div class="how-itemcart1">
                                                <img src="@Url.Content(item.ImageUrl)" >                                           
                                            </div>
                                        </a>
                                    </td>
                                    <td class="column-2"> @item.AnouncementName</td>
                                    <td class="column-3">$ @item.Price</td>
                                    <td class="column-4"> @item.Amount
                                        @*<div class="wrap-num-product flex-w m-l-auto m-r-0">
                                            <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-minus"></i>
                                            </div>

                                            <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" value="@item.Amount">

                                            <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-plus"></i>
                                            </div>
                                        </div>*@
                                    </td>
                                    <td class="column-5">$@(item.Price * item.Amount)</td>
                                </tr>
                             }              
                        </table>
                    </div>

                    <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                        <div class="flex-w flex-m m-r-20 m-tb-5">
                            <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">

                            <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                                Apply coupon
                            </div>
                        </div>

                        <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                            Update Cart
                        </div>
                    </div>
                </div>
            </div>
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Cart Totals
                    </h4>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Subtotal:
                            </span>
                        </div>

                        <div class="size-209">
                            <span class="mtext-110 cl2">
                                $@Model.TotalPrice
                            </span>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        <div class="size-208 w-full-ssm">
                            <span class="stext-110 cl2">
                                Payment:
                            </span>
                        </div>
                        <div class="bor8 bg0 m-b-22">
                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" asp-for="NameCard" placeholder="Name on card">
                            @*<span asp-validation-for="NameCard" class="text-danger"></span>*@
                        </div>
                        <div class="bor8 bg0 m-b-22">
                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" name="CreditCartNumber" placeholder="Credit Card Number">
                            @*<span asp-validation-for="CreditCartNumber" class="text-danger"></span>*@
                        </div>
                        <div class="bor8 bg0 m-b-22">
                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" asp-for="SecurityCode" placeholder="CVV \ Security code">
                            @*<span asp-validation-for="SecurityCode" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="flex-w flex-t p-t-27 p-b-33">
                        <div class="size-208">
                            <span class="mtext-101 cl2">
                                Total:
                            </span>
                        </div>

                        <div class="size-209 p-t-1">
                            <span class="mtext-110 cl2">
                                $@Model.TotalPrice
                            </span>
                        </div>
                    </div>

                    <button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" type="submit">
                        Proceed to Checkout
                    </button>
                </div>
            </div>       
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}